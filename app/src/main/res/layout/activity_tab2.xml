<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >

        // header icon
        //end of header icon


        //start of title
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:text="NIGERIAN LEADERS"
                android:textAlignment="center"
                android:layout_width="fill_parent"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:background="#258A0A"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>
        //end of title

        //main contents
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#D3F0DF">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/seal"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                >

                //main contents
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="25dp"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="300dp"
                        android:layout_height="65dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/Balewa"
                        android:layout_marginBottom="2dp"

                        >
                        <ImageView

                            android:layout_width="60dp"
                            android:layout_height="65dp"
                            android:background="@drawable/balewa"
                            android:layout_gravity="left"
                            />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="20dp"
                                android:text="Sir A.Tafawa Balewa"
                                android:textColor="#000000"
                                />
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="20dp"
                                android:text="1914 - 1924"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </LinearLayout>



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="300dp"
                        android:layout_height="75dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/nnamdi"

                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="75dp"
                            android:background="@drawable/azikiwe"
                            android:layout_gravity="left"
                            android:layout_marginBottom="0dp"
                            />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr.Nnamdi Azikiwe"
                            android:id="@+id/Nnamdi"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="October 1, 1963 – January 16, 1966"
                            android:textColor="#000000"/>
                        </LinearLayout>
                        </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/ironsi">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/aguiyi"
                            android:layout_gravity="left"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gen. Aguiyi Ironsi"
                            android:textColor="#000000"
                           />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="16 January 1966 – 19 July 1966"
                            android:textColor="#000000"/>
                        </LinearLayout>
                        </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/gowon">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/gowon"
                            android:layout_gravity="left"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yakubu Gowon"
                                android:textColor="#000000"
                                />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="20dp"
                                android:text="1 August 1966 – 29 July 1975"
                                android:textColor="#000000"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/murtala">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/murtala"
                            android:layout_gravity="left"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GEN.MURTALA MUHAMMED"
                            android:textColor="#000000"
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="July 30, 1975 – February 13, 1976"
                            android:textColor="#000000"/>
                    </LinearLayout>
                        </LinearLayout>



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/obasanjo">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/obj"
                            android:layout_gravity="left"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GEN.OLUSEGUN OBASANJO"
                            android:textColor="#000000"
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="29 May 1999 – 29 May 2007"
                            android:textColor="#000000"/>
                    </LinearLayout>
                        </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/shehu">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/shagari"
                            android:layout_gravity="left"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alh.Shehu Shagari"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="October 1, 1979 – December 31, 1983"
                            android:textColor="#000000"/>
                    </LinearLayout>
                        </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/buhari">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/buhari"
                            android:layout_gravity="left"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MAJ. GEN MUHAMMED BUHARI"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="July 30, 1975 – February 13, 1976"
                            android:textColor="#000000"/>
                    </LinearLayout>
                        </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/ibrahim">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ibrahim"
                            android:layout_gravity="left"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GEN.IBRAHIM BABANGIDA"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="27 August 1985 – 27 August 1993"
                            android:textColor="#000000"/>
                    </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                            android:id="@+id/ernest">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ernest"
                            android:layout_gravity="left"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="18dp"
                                >


                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHIEF ERNEST SHONEKON"
                                android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="26 August 1993 – 17 November 1993"
                            android:textColor="#000000"/>
                    </LinearLayout>
                            </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/abacha">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/abacha"
                            android:layout_gravity="left"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GEN.SANNI ABACHA"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="17 November 1993 – 8 June 1998"
                            android:textColor="#000000"/>
                    </LinearLayout>
                        </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/abubakar">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/abubakar"
                            android:layout_gravity="left"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="General Abdulsalaam Abubakar"
                            android:textColor="#000000"
                           />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="9 June 1998 – 29 May 1999"
                            android:textColor="#000000"/>
                    </LinearLayout>
                        </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/musa">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/musa"
                            android:layout_gravity="left"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ALHAJI.UMARU MUSA YAR’ADUA"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="29 May 2007 – 5 May 2010"
                            android:textColor="#000000"/>
                    </LinearLayout>
                        </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/goodluck">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/goodluck"
                            android:layout_gravity="left"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DR. GOODLUCK JONATHAN"
                            android:textColor="#000000"
                           />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:text="29 May 2007 – 28 May 2015"
                            android:textColor="#000000"/>
                    </LinearLayout>
                        </LinearLayout>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
        //end of main contents

    </LinearLayout>


</ScrollView>